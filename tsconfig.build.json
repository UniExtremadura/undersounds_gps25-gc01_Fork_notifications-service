{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "test",
    "**/*spec.ts",
  ]
}
